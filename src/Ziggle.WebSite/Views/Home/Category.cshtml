@model Ziggle.WebSite.Models.CategoryViewModel

@{
    ViewBag.Title = Model.Category.Name;
}

<h2>@Model.Category.Name</h2>
<body>
    @foreach (var product in Model.Products)
    {
    <p>
    @product.Name - @string.Format("{0:C}", product.Price)
    @Html.ActionLink("Add to Cart", "AddToCart", new { id = product.Id })</p>
    }
</body>
